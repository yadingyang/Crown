@model IEnumerable<CM.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>Welcome @HttpContext.Current.User.Identity.Name</p>
<input type="button" title="Login" value="Login" onclick="location.href='@Url.Action("Login", "Account")'" />
<input type="button" title="Signup" value="Signup" onclick="location.href='@Url.Action("Register", "Account")'" />
<input type="button" title="Logout" value="Logout" onclick="location.href='@Url.Action("LogOff", "Account")'" />
  
@using (Html.BeginForm("Search","Index"))
{

        @Html.TextBox("SearchString") <br />
        <input type="submit" value="Search" />
}

 
<table>
   
    @foreach (var item in Model)
    {
        <tr>
            <td> @Html.DisplayFor(modelitem => item.CategoryId) </td>
            
            <td>
                @Html.ActionLink(item.Name, "Cate", new
           {
               id = item.CategoryId
            })
        </td>
            <td>  @Html.DisplayFor(modelitem => item.Descn)</td>
           
            
        </tr>
    }
</table>
















<script src="~/Scripts/app.js"></script>
<script src="~/Scripts/controller.js"></script>